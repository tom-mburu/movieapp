<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="210dp">
    <androidx.cardview.widget.CardView
        android:backgroundTint="@color/black"
        app:cardCornerRadius="10dp"
        android:elevation="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout

        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_weight=".2"
        android:paddingLeft="0dp"
        android:orientation="vertical">
        <TextView
            android:textColor="#E65100"
            android:id="@+id/discoverMovieTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title"
            android:paddingTop="5dp"
            android:textSize="15sp"
            android:gravity="center"/>
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/discoverMovieBackdropimage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <TextView
            android:textColor="#E65100"
            android:id="@+id/discoverMovieDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="release dates"
            android:gravity="center"
            android:textSize="15sp"
            />


    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginLeft="5dp"
        android:layout_weight=".7"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:id="@+id/discoverMovieOverview"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="overview of the movie"
            android:textSize="15sp"
            android:padding="5dp"/>
        <RatingBar
            android:progressTint="@color/white"
            android:progressBackgroundTint="@color/white"
            android:id="@+id/discoverMovieRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:numStars="5"
            android:rating="0.0"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"/>

    </LinearLayout>

</LinearLayout>